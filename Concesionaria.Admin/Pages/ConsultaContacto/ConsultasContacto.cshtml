@page "/consultas-contacto"
@model Concesionaria.Admin.Pages.ConsultaContacto.ConsultasContactoModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewBag.Title = "Consultas de contacto";
    ViewBag.SubTitle = "Listado";
}

@section styles
{
    <!-- Datatables css -->
    <link href="~/plugins/datatables/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css">
    <!-- SweetAlert2 css -->
    <link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
}

<div class="container-fluid">

    @await Html.PartialAsync("~/Pages/Shared/Partials/_PageTitle.cshtml")

    <div class="row justify-content-center">
        <div class="col-xxl-10">
            <div class="card">
                <div class="card-header justify-content-between">
                    <h4 class="card-title"> Listado de Consultas de contacto </h4>
                    <a href="/consultas-contacto" target="_self" title="Haga clic para refrescar el listado." class="icon-link icon-link-hover link-primary fw-semibold">Refrescar<i class="ti ti-refresh bi align-middle fs-lg"></i></a>
                </div>

                <div class="card-body">
                    <input type="hidden" name="__RequestVerificationToken" value="@Antiforgery.GetTokens(HttpContext).RequestToken" />
                    <table data-tables="basic" class="table table-striped dt-responsive align-middle mb-0">
                        <thead class="thead-sm text-uppercase fs-xxs">
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>E-mail</th>
                                <th>Teléfono</th>
                                <th>Enviada</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ConsultasContacto != null)
                            {
                                foreach (var consulta in Model.ConsultasContacto)
                                {
                                    <tr>
                                        <td>@consulta.Nombre</td>
                                        <td>@consulta.Apellido</td>
                                        <td><a href="mailto:@consulta.Email" title="Haga clic para enviar un e-mail.">@consulta.Email</a></td>
                                        <td>@consulta.Telefono</td>
                                        <td>@consulta.FechaEnvio.ToString("g")</td>
                                        <td>
                                            @if (consulta.NoLeida)
                                            {
                                                <button type="button"
                                                        id="btnMarcarEstadoLeida"
                                                        title="Marcar como leída"
                                                        class="btn btn-sm btn-ghost-danger"
                                                        onclick="marcarLeida(@consulta.Id, true)">
                                                    No Leída
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button"
                                                        id="btnMarcarEstadoNoLeida"
                                                        title="Marcar como no leída"
                                                        class="btn btn-sm btn-ghost-primary"
                                                        onclick="marcarLeida(@consulta.Id, false)">
                                                    Leída
                                                </button>
                                            }
                                        </td>
                                        <td>
                                            <button type="button" title="Haga clic para abrir la consulta."
                                                    class="btn btn-sm btn-ghost-success"
                                                    onclick="mostrarDetalleConsultaSweetAlert(@consulta.Id)">
                                                Abrir
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">No hay datos disponibles.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>
    </div>
</div>

@section scripts
{
    <!-- Datatables js -->
    <script src="~/plugins/datatables/dataTables.min.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap5.min.js"></script>
    <script src="~/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables/responsive.bootstrap5.min.js"></script>
    <!-- SweetAlert2 js -->
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script>
        new DataTable('[data-tables="basic"]', {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-AR.json',
                paginate: {
                    first: '<i class="ti ti-chevrons-left"></i>',   // Tabler First
                    previous: '<i class="ti ti-chevron-left"></i>', // Tabler Prev
                    next: '<i class="ti ti-chevron-right"></i>',    // Tabler Next
                    last: '<i class="ti ti-chevrons-right"></i>'    // Tabler Last
                }
            }
        });

        function mostrarDetalleConsultaSweetAlert(id) {
            Swal.fire({
                title: 'Cargando...',
                html: 'Por favor espere...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                    fetch(`/consulta-contacto-detalle/${id}`)
                        .then(response => response.text())
                        .then(html => {
                            Swal.fire({
                                title: 'Detalle de Consulta',
                                html: html,
                                width: '40vw',
                                showCloseButton: true,
                                showConfirmButton: false,
                                didClose: () => {
                                    window.location.href = '/consultas-contacto';
                                }
                            });
                        })
                        .catch(() => {
                            Swal.fire('Error', 'No se pudo cargar el detalle.', 'error');
                        });
                }
            });
        }

        function marcarLeida(id, leida) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            fetch(`/consultas-contacto?handler=MarcarLeida&id=${id}&leida=${leida}`, {
                method: 'POST',
                headers: {
                    'X-CSRF-TOKEN': token
                }
            })
            .then(async response => {
                if (response.ok) {
                    location.reload();
                } else {
                    const error = await response.text();
                    console.error('Error response:', error);
                    Swal.fire('Error', 'No se pudo cambiar el estado.', 'error');
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                Swal.fire('Error', 'Error de conexión.', 'error');
            });
        }
    </script>
}