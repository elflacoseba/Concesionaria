
@{
    var title = ViewBag.Title;
    var breadcrumbs = ViewData["Breadcrumbs"] as List<dynamic>;
}

<div class="page-title-head d-flex align-items-center">
    <div class="flex-grow-1">
        <h4 class="fs-sm text-uppercase fw-bold m-0">@title</h4>
    </div>

    <div class="text-end">
        <ol class="breadcrumb m-0 py-0">
            @if (breadcrumbs != null && breadcrumbs.Count > 0)
            {
                foreach (var crumb in breadcrumbs)
                {
                    if (!string.IsNullOrEmpty((string)crumb.Url))
                    {
                        <li class="breadcrumb-item"><a href="@crumb.Url">@crumb.Nombre</a></li>
                    }
                    else
                    {
                        <li class="breadcrumb-item active">@crumb.Nombre</li>
                    }
                }
            }
            else
            {
                <li class="breadcrumb-item active">@title</li>
            }
        </ol>
    </div>
</div>